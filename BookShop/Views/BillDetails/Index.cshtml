@model IEnumerable<BookShop.Models.BillDetail>
@using BookShop.Models
@{
    ViewBag.Title = "Index";
    ApplicationDbContext db = new ApplicationDbContext();
    var books = db.Books.ToList();
}

<h2>Index</h2>

<form action="@Url.Action("Create", "BillDetails", new { billId = @ViewBag.BillId })" method="post">
    <div class="form-group">
        <select name="BookId" class="form-control-static">
            @foreach (var book in books)
            {
                <option value="@book.Id">@book.Name</option>
            }
        </select>
        <input type="number" name="Count" />
        <input type="number" name="Price" />
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookNavigation.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", new { BillId = item.BillId, BookId = item.BookId })
            </td>
        </tr>
    }

</table>
